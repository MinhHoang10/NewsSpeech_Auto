<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.newsspeech.auto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".NewsApp"
        android:allowBackup="true"
        android:label="NewsSpeech Auto"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/Theme.NewsSpeechAuto"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        tools:ignore="UnusedAttribute">

        <service
            android:name=".service.AutoSpeechService"
            android:exported="false">

<!--            android:enabled="true"-->
<!--            android:label="NewsSpeech Auto">-->

            <intent-filter>
                <action android:name="androidx.car.app.CarAppService" />
                <category android:name="androidx.car.app.category.MEDIA"/>
            </intent-filter>

            <meta-data
                android:name="androidx.car.app.minCarApiLevel"
                android:value="1" />

            <meta-data
                android:name="com.google.android.gms.car.application"
                android:resource="@xml/automotive_app_desc" />
        </service>

        <activity
            android:name=".presentation.mobile.MobileActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Tắt strict mode để tránh ANR warnings trong development -->
        <meta-data
            android:name="android.strictmode.enable"
            android:value="false" />

    </application>
</manifest>